    "baseUrl": "src",
    "outDir": "dist",
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src/*.ts"],
  "exclude": ["src/*.d.ts", "src/*.spec.ts", "dist", "node_modules"]
}
